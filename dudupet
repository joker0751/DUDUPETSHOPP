<body>
    <header class="header">
        <nav class="nav-container">
            <div class="nav-left">
                <a href="#" class="logo">DUDU PET SHOP AGENDAMENTO</a>
                <div class="social-icons">
                    <a href="https://facebook.com/Eduardo Msouza" target="_blank" class="social-icon facebook"
                        aria-label="Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://instagram.com/dudupetshopp" target="_blank" class="social-icon instagram"
                        aria-label="Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
            <button class="btn btn-primary" id="cartBtn">
                <i class="fas fa-shopping-cart"></i>
                <span id="cartCount">0</span> itens
            </button>
        </nav>
    </header>

    <div class="cart-container" id="cartContainer">
        <h3>Seu Carrinho</h3>
        <div id="cartItems"></div>
        <div id="cartTotal" class="cart-total">Total: R$ 0,00</div>
        <button class="btn btn-primary" id="checkoutBtn">Finalizar Pedido</button>
    </div>

    <main class="main-content">
        <section class="customer-info">
            <h2>Informações do Cliente</h2>
            <div class="form-group">
                <label for="ownerName">Nome do Dono</label>
                <input type="text" id="ownerName" placeholder="Seu nome completo">
            </div>
            <div class="form-group">
                <label for="petName">Nome do Pet</label>
                <input type="text" id="petName" placeholder="Nome do seu pet">
            </div>
        </section>

        <section id="services">
            <h2>Nossos Serviços</h2>
            <div class="services-grid" id="servicesGrid"></div>
        </section>

        <section id="scheduling">
            <h2>Agendamento</h2>
            <div class="calendar-container">
                <div id="calendar" class="calendar-grid"></div>
                <h3>Horários Disponíveis</h3>
                <div id="timeSlots" class="time-slots"></div>
            </div>
        </section>
    </main>

    <script>
        const APP = {


            data: {
                cart: [],
                selectedDate: null,
                selectedTime: null,
                services: [
                    {
                        id: 1,
                        name: 'Pacote Completo Pet',
                        price: 50.00,
                        description: `• Banho com shampoo premium e condicionador
* Tosa na máquina ou tesoura
* Hidratação completa
* Corte de unhas
* Limpeza de ouvidos
* Laço ou gravata`,
                        image: '#FFD6D6'
                    }
                ]
            },













            elements: {},

            init() {
                this.getElements();
                this.bindEvents();
                this.renderServices();
                this.renderCalendar();
                this.updateCart();
            },

            getElements() {
                this.elements = {
                    cartBtn: document.getElementById('cartBtn'),
                    cartContainer: document.getElementById('cartContainer'),
                    cartItems: document.getElementById('cartItems'),
                    cartCount: document.getElementById('cartCount'),
                    cartTotal: document.getElementById('cartTotal'),
                    checkoutBtn: document.getElementById('checkoutBtn'),
                    servicesGrid: document.getElementById('servicesGrid'),
                    calendar: document.getElementById('calendar'),
                    timeSlots: document.getElementById('timeSlots'),
                    ownerName: document.getElementById('ownerName'),
                    petName: document.getElementById('petName')
                };
            },

            bindEvents() {
                this.elements.cartBtn.addEventListener('click', () => this.toggleCart());
                this.elements.checkoutBtn.addEventListener('click', () => this.checkout());
                document.addEventListener('click', (e) => {
                    if (!this.elements.cartContainer.contains(e.target) &&
                        !this.elements.cartBtn.contains(e.target)) {
                        this.elements.cartContainer.style.display = 'none';
                    }
                });
            },

            renderServices() {
                this.elements.servicesGrid.innerHTML = this.data.services
                    .map(service => `
                        <div class="service-card">
                            <div class="service-image" style="background-color: ${service.image}"></div>
                            <div class="service-content">
                                <h3>${service.name}</h3>
                                <p>${service.description}</p>
                                <div class="service-price">R$ ${service.price.toFixed(2)}</div>
                                <button class="btn btn-primary" onclick="APP.addToCart(${service.id})">
                                    Adicionar ao Carrinho
                                </button>
                            </div>
                        </div>
                    `).join('');
            },

            renderCalendar() {
                const today = new Date();
                const daysInMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0).getDate();
                const firstDay = new Date(today.getFullYear(), today.getMonth(), 1).getDay();

                let calendarHTML = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb']
                    .map(day => `<div class="calendar-header ${day === 'Dom' ? 'sunday' : ''}">${day}</div>`)
                    .join('');

                for (let i = 0; i < firstDay; i++) {
                    calendarHTML += '<div class="calendar-day empty"></div>';
                }

                for (let day = 1; day <= daysInMonth; day++) {
                    const date = new Date(today.getFullYear(), today.getMonth(), day);
                    const isSunday = date.getDay() === 0;
                    const isPast = date < today;
                    const isDisabled = isPast || isSunday;

                    calendarHTML += `
                        <div class="calendar-day 
                            ${isSunday ? 'sunday' : ''} 
                            ${isDisabled ? 'disabled' : ''}"
                            ${!isDisabled ? `onclick="APP.selectDate(${day})"` : ''}
                        >
                            ${day}
                        </div>
                    `;
                }

                this.elements.calendar.innerHTML = calendarHTML;
            },

            generateTimeSlots(isSaturday) {
                const slots = [];
                const startHour = 8; // 8:00
                const endHour = isSaturday ? 16 : 18; // 16:30 ou 18:30
                const endMinute = 30;

                for (let hour = startHour; hour <= endHour; hour++) {
                    for (let minute = 0; minute <= 30; minute += 30) {
                        if (hour === endHour && minute > endMinute) continue;
                        const timeString = `${hour.toString().padStart(2, '0')}:${minute.toString().padStart(2, '0')}`;
                        slots.push(timeString);
                    }
                }
                return slots;
            },

            renderTimeSlots() {
                if (!this.data.selectedDate) {
                    this.elements.timeSlots.innerHTML = '<p>Selecione uma data primeiro</p>';
                    return;
                }

                const isSaturday = this.data.selectedDate.getDay() === 6;
                const timeSlots = this.generateTimeSlots(isSaturday);

                this.elements.timeSlots.innerHTML = timeSlots
                    .map(time => `
                        <div class="time-slot" onclick="APP.selectTime('${time}')">
                            ${time}
                        </div>
                    `).join('');
            },

            selectDate(day) {
                const date = new Date(new Date().getFullYear(), new Date().getMonth(), day);
                this.data.selectedDate = date;

                document.querySelectorAll('.calendar-day').forEach(el => {
                    el.classList.remove('selected');
                });
                event.target.classList.add('selected');

                this.renderTimeSlots();
            },

            selectTime(time) {
                this.data.selectedTime = time;
                document.querySelectorAll('.time-slot').forEach(el => {
                    el.classList.remove('selected');
                });
                event.target.classList.add('selected');
            },

            addToCart(serviceId) {
                const service = this.data.services.find(s => s.id === serviceId);
                if (service) {
                    this.data.cart.push({ ...service, cartId: Date.now() });
                    this.updateCart();
                    this.elements.cartContainer.style.display = 'block';
                }
            },

            removeFromCart(cartId) {
                this.data.cart = this.data.cart.filter(item => item.cartId !== cartId);
                this.updateCart();
            },

            updateCart() {
                const total = this.data.cart.reduce((sum, item) => sum + item.price, 0);
                this.elements.cartCount.textContent = this.data.cart.length;

                if (this.data.cart.length === 0) {
                    this.elements.cartItems.innerHTML = '<p>Carrinho vazio</p>';
                } else {
                    this.elements.cartItems.innerHTML = this.data.cart
                        .map(item => `
                            <div class="cart-item">
                                <span>${item.name}</span>
                                <div>
                                    <span>R$ ${item.price.toFixed(2)}</span>
                                    <button class="remove-item" onclick="APP.removeFromCart(${item.cartId})">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        `).join('');
                }

                this.elements.cartTotal.textContent = `Total: R$ ${total.toFixed(2)}`;
            },

            toggleCart() {
                const isHidden = this.elements.cartContainer.style.display === 'none';
                this.elements.cartContainer.style.display = isHidden ? 'block' : 'none';
            },

            checkout() {
                const ownerName = this.elements.ownerName.value.trim();
                const petName = this.elements.petName.value.trim();

                if (!this.validateCheckout(ownerName, petName)) return;

                const formattedDate = this.data.selectedDate.toLocaleDateString();
                const message = this.createWhatsAppMessage(ownerName, petName, formattedDate);

                window.open(`https://wa.me/5516992320582?text=${encodeURIComponent(message)}`, '_blank');
                this.resetForm();
            },

            validateCheckout(ownerName, petName) {
                if (this.data.cart.length === 0) {
                    alert('Adicione algum serviço ao carrinho');
                    return false;
                }
                if (!ownerName || !petName) {
                    alert('Preencha os dados do cliente e do pet');
                    return false;
                }
                if (!this.data.selectedDate || !this.data.selectedTime) {
                    alert('Selecione uma data e horário');
                    return false;
                }
                return true;
            },

            createWhatsAppMessage(ownerName, petName, date) {
                const services = this.data.cart
                    .map(item => `${item.name}: R$ ${item.price.toFixed(2)}`)
                    .join('\n');
                const total = this.data.cart
                    .reduce((sum, item) => sum + item.price, 0)
                    .toFixed(2);

                return `*Novo Agendamento*\n\n` +
                    `Cliente: ${ownerName}\n` +
                    `Pet: ${petName}\n\n` +
                    `Serviços:\n${services}\n\n` +
                    `Data: ${date}\n` +
                    `Horário: ${this.data.selectedTime}\n\n` +
                    `Total: R$ ${total}`;
            },

            resetForm() {
                this.data.cart = [];
                this.data.selectedDate = null;
                this.data.selectedTime = null;
                this.elements.ownerName.value = '';
                this.elements.petName.value = '';
                this.elements.cartContainer.style.display = 'none';
                this.updateCart();
                this.renderCalendar();
            }
        };

        document.addEventListener('DOMContentLoaded', () => APP.init());
    </script>
</body>

</html>
